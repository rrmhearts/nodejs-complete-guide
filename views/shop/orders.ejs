<%- include('../includes/head.ejs') %>

<%- include('../includes/neck.ejs') %>

    <%- include('../includes/navigation.ejs') %>
        <main>
                <% if (orders.length > 0) { %>
                    <ul>
                        <% orders.forEach(order => { %>
                            <li>
                                <h1># <%= order._id %></h1>
                                <ul>
                                    <% order.items.forEach(item => { %>
                                        <li>
                                            <%= item.title %> (<%= item.quantity %>)
                                        </li>
                                    <% }) %>
                                </ul>
                            </li>
                        <% }) %>
                    </ul>    
                <% } else { %>
                    <h1>No orders!</h1>
                <% } %>
        </main>
        <%- include('../includes/end.ejs') %>