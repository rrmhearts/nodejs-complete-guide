<% if (isAuthenticated) { %>
    <form action="/cart" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <button class="btn" type="submit">Add to Cart</button>
        <!-- Pass data using hidden input -->
        <input type="hidden" name="productId" value="<%= product._id %>">
    </form>
<% } %>